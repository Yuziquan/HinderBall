<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    android:background="@mipmap/main_menu_bg">

    <com.example.wuchangi.hinderball.custom.MyButton
            android:id="@+id/startGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/start_game"
            android:background="#00000000"
            android:layout_marginBottom="50dp"/>

    <com.example.wuchangi.hinderball.custom.MyButton
            android:id="@+id/setGameRules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/set_game_rules"
            android:background="#00000000"
            />

    <com.example.wuchangi.hinderball.custom.MyButton
            android:id="@+id/exitGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/exit_game"
            android:background="#00000000"
            android:layout_marginTop="50dp"/>
</LinearLayout>






